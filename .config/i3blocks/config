[gpu_stats]
command=sensors | awk  '/edge:/ {print $2}'
label=<span color="#2e8b57"><b>GPU: </b></span>
interval=2
border=#2e8b57
border_top=0
border_right=0
border_bottom=1
border_left=0


[battery]
interval=2
color=#ff5555
border=#ff5555
border_top=0
border_right=0
border_bottom=1
border_left=0


[cpu_stats]
command=sensors | awk  '/^Core 0:/ {print $3}'
interval=2
label=<span color="#6272a4">CPU:</span>
border=#6272a4
border_top=0
border_right=0
border_bottom=1
border_left=0


[nmve_stats]
command=sensors | sed -rn 's/.*Composite:\s+([^ ]+).*/\1/p'
label=<span color="#c3cdc8"><b>NVME1: </b></span>
interval=2
border=#c3cdc8
border_top=0
border_right=0
border_bottom=1
border_left=0


