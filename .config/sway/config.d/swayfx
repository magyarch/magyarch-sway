### --- SwayFX extra beállítások --- ###

# Inaktív ablakok halványítása
default_dim_inactive 0.15
dim_inactive_colors.unfocused #00000066
dim_inactive_colors.urgent    #aa0000aa

# Blur effekt
# értéktartomány: passes (0-10), radius (0-10),
# noise (0.0-1.0), brightness/contrast/saturation (0.0-2.0)
blur enable
blur_passes 3
blur_radius 7
blur_noise 0.02
blur_brightness 1.0
blur_contrast 1.0
blur_saturation 1.0

# Lekerekített sarkok
corner_radius 12
titlebar_separator disable

# Shadow effekt
shadows enable
shadows_on_csd enable
shadow_blur_radius 28
shadow_color #0000007f
shadow_offset 0 6
shadow_inactive_color #00000044

# LayerShell effektek (pl. waybar, mako)
layer_effects "waybar" {
    blur enable;
    blur_xray enable;
    shadows enable;
    corner_radius 8;
}

layer_effects "mako" {
    blur enable;
    shadows enable;
    corner_radius 6;
}

# Scratchpad speciális mód (opcionális)
# scratchpad_minimize enable
