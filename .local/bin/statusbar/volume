#!/usr/bin/env bash

# Prints the current volume or ðŸ”‡ if muted.

case $BLOCK_BUTTON in
#	1) setsid -f "$TERMINAL" -e pamixer ;;
	1) pamixer -t ;;
	2) pamixer --allow-boost -i 1 ;;
	3) pamixer --allow-boost -d 1 ;;
	4) notify-send "ðŸ“¢ Volume module" "\- Shows volume ðŸ”Š, ðŸ”‡ if muted.
- Middle click to mute.
- Scroll to change." ;;

esac

[ $(pamixer --get-mute) = true ] && echo ðŸ”‡ && exit

vol="$(pamixer --get-volume)"

if [ "$vol" -gt "70" ]; then
	icon="ðŸ”Š"
elif [ "$vol" -gt "30" ]; then
	icon="ðŸ”‰"
elif [ "$vol" -gt "0" ]; then
	icon="ðŸ”ˆ"
else
        echo ðŸ”‡ && exit
fi

echo "$icon$vol%"
